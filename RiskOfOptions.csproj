<!--    &lt;!&ndash; Copies files to a folder for use with a Unity project &ndash;&gt;-->
<!--    <Copy SourceFiles="@(OutputFiles)" DestinationFolder="$(UnityPackageDir)" />-->
<!--  </Target>-->
  
</Project>